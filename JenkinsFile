node {
    withMaven(maven:'maven') {
    	dir('../poc-devops-java@script') {
        	stage('Build') {
        	   	sh 'mvn install:install-file -Dpackaging=jar -DgeneratePom=true'
        	   	sh 'mvn clean install'
            	def pom = readMavenPom file:'pom.xml'
            	print pom.version
            	env.version = pom.version
            }
	        stage('Image') {
    	        docker.withRegistry('http://docker.rete.dom:5000/') {
                	def app = docker.build "docker.rete.dom:5000/poc-devops-java:${env.version}"
                	app.push("${env.version}")
    	        }
            }
        }
    }
}